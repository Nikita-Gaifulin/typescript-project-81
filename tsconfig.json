{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
      "outDir": ".\\dist",
      "rootDir": ".\\src",
      "module": "ESNext",
      "target": "ES2022",
      "moduleResolution": "node",
      "strict": true,
      "forceConsistentCasingInFileNames": true,  // Важно для Windows!
      "skipLibCheck": true
  },
  "include": ["src\\**\\*"],
  "exclude": [
      "dist",
      "node_modules",
      "**\\*.test.ts",
      "vitest.config.ts",
      "eslint.config.js"
    ]
  }